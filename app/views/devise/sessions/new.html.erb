<div class="container">
  <h2>ユーザーログイン</h2>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    
    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "on" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード（6文字以上）" %><br />
      <%= f.password_field :password, id:"user_password", autocomplete: "off" %>
      <button id="btn_passview">表示</button>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: :form__btn %>
    </div>

  <% end %>
  
</div>
